<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/LinearLayout_Event_Search"
    android:background="@drawable/bgall" >

 
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="@string/Search_Where"
        android:textColor="@android:color/white"
    />
    <Spinner 
        android:id="@+id/Spinner_Location"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/Search_Near"
    />
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:id="@+id/Text_Search_Specify_Location"
        android:visibility="gone"
    />
    
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:id="@+id/Edit_Search_Specify_Location"
        android:visibility="gone"
        android:inputType="text"      
    />
        
    
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="@string/Search_Distance"
        android:textColor="@android:color/white" 
    />
    
    <Spinner 
        android:id="@+id/Spinner_Distance"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    />
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:id="@+id/Text_Search_Specify_Distance"
        android:visibility="gone"
    />
    
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:id="@+id/Edit_Search_Specify_Distance"
        android:visibility="gone"
        android:inputType="number"      
    />
    
    <TextView android:id="@+id/Text_Event_Search_timeDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>
    <Button android:id="@+id/Button_Event_Search_pickTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Search_Change_Time_Button"/>
    
    <TextView android:id="@+id/Text_Event_Search_dateDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>
    <Button android:id="@+id/Button_Event_Search_pickDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Search_Change_Date_Button"/>

    <Button
        android:id="@+id/Button_Event_Search_findEvents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Search_Find_Events_Button" />

</LinearLayout>
</ScrollView>